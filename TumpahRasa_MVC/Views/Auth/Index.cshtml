@model TumpahRasa_MVC.Models.tb_member

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/Auth/style3.css" />
    <title>Login and register</title>
</head>

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <div id="form" class="sign-in-form">
                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="title">Log in</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            @Html.TextBoxFor(model => model.password, new { @class = "form-control", @type = "password", placeholder = "Password" })
                        </div>
                        <div style="display: flex; gap: 1rem; justify-content: start; width: 22rem;">
                            <asp:CheckBox ID="checkremember" runat="server" />
                            <asp:Label ID="Label1" runat="server" Text="Remember Me"></asp:Label>
                        </div>
                        <input type="submit" class="btn solid" value="Login" />
                    }
                </div>

                <div id="form" class="sign-up-form">
                    @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="title">Register</h2>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "Username" })
                        </div>
                        <div class="input-field">
                            <i class="fas fa-envelope"></i>
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", @type = "email", placeholder = "Email" })
                        </div>
                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            @Html.TextBoxFor(model => model.password, new { @class = "form-control", @type = "password", placeholder = "Password" })
                        </div>
                        <input type="submit" class="btn solid" value="Register" />
                    }
                </div>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p> Welcome to Tumpah Rasa, your digital kitchen of endless culinary inspiration!</p>
                    <button class="btn transparent" id="sign-up-btn">Register</button>
                </div>
                <img src="~/Content/Auth/img/img1.jpg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Welcome to Tumpah Rasa, your digital kitchen of endless culinary inspiration!
                    </p>
                    <button class="btn transparent" id="sign-in-btn">Login</button>
                </div>
                <img src="~/Content/Auth/img/img2.jpg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/Content/Auth/app.js"></script>
</body>

</html>
