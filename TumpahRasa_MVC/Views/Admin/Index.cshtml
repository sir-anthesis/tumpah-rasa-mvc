@model IEnumerable<TumpahRasa_MVC.Models.tb_recipe>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div style="display:flex; justify-content:space-between; align-items:center;">
                    <h5 class="card-title fw-semibold mb-4">Recent Insertions</h5>
                    <asp:Button ID="Button1" runat="server" Text="Logout" OnClick="Logout_Click" CssClass="btn btn-primary" />
                </div>
                <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                        <thead class="text-dark fs-4">
                            <tr>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">No</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Name</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Rating</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Created At</h6>
                                </th>
                                <th class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">Action</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int no = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">@no</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-1">@Html.DisplayFor(modelItem => item.name)</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@Html.DisplayFor(modelItem => item.rating)</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@Html.DisplayFor(modelItem => item.created_at)</p>
                                    </td>
                                    <td class="d-flex">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id_recipe }, new { @class = "btn btn-warning me-1" })
                                        @using (Html.BeginForm("Delete", "Admin", new { id = item.id_recipe }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this recipe?');" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        }
                                    </td>
                                </tr>
                                no++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

